{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es2022"
    ],
    "target": "ES2022",
    "outDir": "./dist",
    "moduleResolution": "node",
    "declaration": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "index.ts"
  ],
  "exclude": [
    "dist/**/*.ts",
    "node_modules"
  ]
}